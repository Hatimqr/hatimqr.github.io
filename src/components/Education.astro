---
import Section from "./Section.astro";
import type { EducationProps } from "@types";

interface Props {
  education: EducationProps[];
}

const { education } = Astro.props;
---

<Section text="Education" href="education">
  {
    education.map(({ institution, degree, startDate, endDate, gpa, honors, coursework, experiences }) => (
      <div class="mb-10">
        <h3 class="mb-1.5 font-serif text-2xl font-semibold text-white">
          {institution}
        </h3>
        <div class="flex flex-col items-start pb-5">
          <h4 class="mb-0.5 font-serif text-2xl font-medium text-primary">
            {degree}
          </h4>
          <span class="pb-1 text-sm text-white/70">
            {startDate} â€” {endDate}
          </span>
          {gpa && (
            <span class="pb-1 text-sm text-neutral">
              GPA: {gpa}
            </span>
          )}
          {honors && honors.length > 0 && (
            <div class="pb-2">
              {honors.map((honor) => (
                <span class="mr-3 inline-block rounded-full bg-primary/20 px-3 py-1 text-xs font-medium text-primary">
                  {honor}
                </span>
              ))}
            </div>
          )}
        </div>
        
        {coursework && coursework.length > 0 && (
          <div class="mb-4">
            <h5 class="mb-2 text-sm font-semibold text-white/80">Key Coursework:</h5>
            <p class="text-sm text-neutral">
              {coursework.join(", ")}
            </p>
          </div>
        )}
        
        {experiences && experiences.length > 0 && (
          <div class="mb-4">
            <h5 class="mb-2 text-sm font-semibold text-white/80">Key Experiences:</h5>
            <ul class="list-none">
              {experiences.map((experience) => (
                <li class="relative mb-2 pl-8 text-base text-neutral before:absolute before:top-1 before:left-0 before:content-[url(/check.svg)]">
                  {experience}
                </li>
              ))}
            </ul>
          </div>
        )}
      </div>
    ))
  }
</Section>